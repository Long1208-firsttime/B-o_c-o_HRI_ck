<launch>

  <!-- Load Gazebo với world của bạn -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find robot10)/world/restaurant.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
  </include>

  <!-- TurtleBot3 model -->
  <param name="robot_description"
         command="$(find xacro)/xacro $(find turtlebot3_description)/urdf/turtlebot3_$(env TURTLEBOT3_MODEL).urdf.xacro" />

  <!-- Spawn TurtleBot3 -->
  <node name="spawn_turtlebot3"
        pkg="gazebo_ros"
        type="spawn_model"
        output="screen"
        args="-urdf
              -param robot_description
              -model robot10
              -x 1.0 -y 2.0 -z 0.1
              -Y 1.57" />

</launch>

